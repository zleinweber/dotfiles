#!/usr/bin/env bash

###########
# Recipe Name: macosx
# Description: First time setup for macbooks
###########

# Recipe configuration
AUTOCHOOSE_PLATFORM_RECIPE=false

# APT packages
SETUP_APT=false
APT_CLEAN=false
APT_INSTALL_PACKAGES=()
APT_REMOVE_PACKAGES=()
APT_UPGRADE=false

# atuin
SETUP_ATUIN=false # Atuin is installed via brew

# homebrew configuration
SETUP_HOMEBREW=true
HOMEBREW_BUNDLE_FILE="./Brewfile"

# MACOS
CONFIGURE_MACOS_SYSTEM=true
SET_MACOS_HOSTNAME="${MACOS_HOSTNAME:-None}"

# nvim
SETUP_NVIM=false

# sudo
SUDO_UP_FRONT=false

# stow
STOW_PACKAGES=(
    atuin
    gitconfig-osx
    kitty
    oh-my-zsh
    tmux
    zsh
    zsh-osx
)

# zsh
SETUP_ZSH=true
SETUP_OH_MY_ZSH=true
