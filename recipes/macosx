# atuin
INSTALL_ATUIN=false # Atuin is installed via brew

# homebrew configuration
INSTALL_HOMEBREW=true
HOMEBREW_BUNDLE_FILE="./Brewfile"

# sudo
SUDO_UP_FRONT=false

# stow
STOW_PACKAGES=(
    atuin
    gitconfig-osx
    kitty
    oh-my-zsh
    tmux
    zsh
    zsh-osx
)

# zsh
SETUP_ZSH=true
INSTALL_OH_MY_ZSH=true
